# Biesse Technical Documentation Chat Assistant - Environment Variables
# Copy this file to .env and fill in your values

# Google API Key (required for Gemini and Embeddings)
# Get your API key from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# Application Settings
DEBUG=true
LOG_LEVEL=INFO

# Database (SQLite for POC)
DATABASE_URL=sqlite:///./data/conversations.db

# Vector Database (ChromaDB embedded)
CHROMADB_PATH=./data/chromadb
COLLECTION_NAME_PREFIX=biesse_

# PDF Processing
MAX_FILE_SIZE_MB=50
CHUNK_SIZE=500
CHUNK_OVERLAP=50
TOP_K_CHUNKS=10

# LLM Settings
EMBEDDING_MODEL=text-embedding-004
LLM_MODEL=gemini-2.0-flash-exp
LLM_TEMPERATURE=0.3
MAX_TOKENS=2048
SIMILARITY_THRESHOLD=0.7

# Categories (comma-separated)
DOCUMENT_CATEGORIES=machine_operation,maintenance,safety,troubleshooting,programming

# CORS
CORS_ORIGINS=http://localhost:3000
